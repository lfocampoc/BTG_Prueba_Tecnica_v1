                  "    if (response.access_token) {",
                  "        pm.collectionVariables.set('admin_token', response.access_token);",
                  "        pm.collectionVariables.set('admin_user_id', response.user.user_id);",
                  "        console.log('Admin Token guardado:', response.access_token);",
                  "        console.log('Admin User ID guardado:', response.user.user_id);",
                  "    } else {",
                  "        console.log('No se encontró access_token en la respuesta admin');",
                  "    }",
                  "} else {",
                  "    console.log('Error en login admin:', pm.response.text());",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
